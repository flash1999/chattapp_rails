<div class="row">
  <!-- Left Sidebar for Users and Rooms -->
  <div class="col-md-2">
    <h5> Hi <%= @current_user.username %> </h5>

    <!-- Users Section -->
    <h4> Users </h4>
    <div>
      <%= turbo_stream_from "users" %>
      <div id="users">
        <%= render @users %>
      </div>
    </div>

    <!-- Rooms Section -->
    <h4> Rooms </h4>
    <%= render partial: "layouts/new_room_form" %>
    <div>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
  </div>

  <!-- Main Chat Section -->
  <div class="col-md-10 bg-dark text-light">
    <% if @single_room %>
      <!-- Room name -->
      <h4 class="text-center"> <%= @single_room.name %> </h4>

      <!-- Turbo stream for the current room -->
      <%= turbo_stream_from @single_room %>

      <!-- Messages section -->
      <div id="messages" class="chat-messages overflow-auto" style="max-height: 500px;">
        <%= render @messages %>
      </div>

      <!-- New Message Form -->
      <div class="mt-3">
        <%= render partial: 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>
